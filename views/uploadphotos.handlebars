<div class="container">
            <div class="ADK-separator-3"></div>
            
            <div class="row">
                <div class="col s10 offset-s1 m8 offset-m2 xl6 offset-xl3">
                    <h1 class="ADK-attacher-1">Upload photos</h1>
                </div>
            </div>

            <div class="row">
                <div class="col s10 offset-s1 m8 offset-m2 xl6 offset-xl3">
                    <div class="card">
                        <div class="card-content">
                            <form id="ADK-form-upload-photos" class="dropzone" action="/api/upload-photos" method="POST" enctype="multipart/form-data">
                                <div class="fallback">
                                    <label for="ADK-photos" class="blue-grey-text text-darken-2">Photos</label>
                                    <input type="file" name="photos" id="ADK-photos" multiple>
                                </div>
                            </form>

                            <div class="ADK-separator-3"></div>

                            <form id="ADK-form-compose" action="/api2/add-story" method="POST">
                                <div class="input-field">
                                    <label for="ADK-title" class="blue-grey-text text-darken-2">Title</label>
                                    <input type="text" name="title" id="ADK-title" class="validate" required>
                                </div>

                                <div class="ADK-separator-3"></div>

                                <button type="submit" class="btn-large waves-effect waves-light" title="Click to Share.">Share</button>
                            </form>

                            <div class="ADK-separator-2"></div>
                        </div>
                    </div>

                    <div class="ADK-separator-3"></div>
                </div>
            </div>
        </div>