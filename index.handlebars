<div class="container">
            <div class="row ADK-signup-wrapper valign-wrapper">
                <div class="col s10 offset-s1 m8 offset-m2 l7 offset-l4 xl5 offset-xl4">
                    <div class="row">
                        <div class="col s10 offset-s1">
                            <!-- <h1 class="brand-logo ADK-attacher-1"><img class="responsive-img" src="../public/assets/images/ADK.png" alt="ADK logo">ADK</h1> -->
                            <p>Everyone deserves to have fun.</p>
                        </div>

                        <div class="col s10 offset-s1">
                            <form id="ADK-form-signup" action="/api/signup" method="POST">
                                <div class="input-field">
                                    <label for="ADK-fullname" class="blue-grey-text text-darken-2">Full name</label>
                                    <input type="text" name="fullname" id="ADK-fullname" class="validate" required>
                                </div>

                                <div class="input-field">
                                    <label for="ADK-email" class="blue-grey-text text-darken-2">Email</label>
                                    <input type="text" name="email" id="ADK-email" class="validate" required>
                                </div>

                                <div class="input-field">
                                    <label for="ADK-username" class="blue-grey-text text-darken-2">Username</label>
                                    <input type="text" name="username" id="ADK-username" class="validate" required>
                                </div>

                                <div class="input-field">
                                    <label for="ADK-password" class="blue-grey-text text-darken-2">Password</label>
                                    <input type="password" name="password" id="ADK-password" class="validate" required>
                                </div>

                                <div class="ADK-separator-2"></div>

                                <button type="submit" class="btn-large waves-effect waves-light" title="Click to sign up.">Sign up</button>
                            </form>

                            <div class="ADK-separator-2"></div>
                        </div>

                        <div class="col s10 offset-s1">
                            <a href="javascript:displayLogin();">Have an account? Log in</a>.

                            <div class="ADK-separator-3"></div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row ADK-login-wrapper valign-wrapper">
                <div class="col s10 offset-s1 m8 offset-m2 l7 offset-l4 xl5 offset-xl4">
                    <div class="row">
                        <div class="col s10 offset-s1">
                            <h1 class="brand-logo black-text ADK-attacher-1"><img class="responsive-img" src="../public/assets/images/ADK.png" alt="ADK logo">ADK</h1>
                            <p class="black-text">Everyone deserves to have fun.</p>
                        </div>

                        <div class="col s10 offset-s1">
                            <form id="ADK-form-login" action="/api/login" method="POST">
                                <div class="input-field">
                                    <label for="ADK-login-username" class="blue-grey-text text-darken-2">Username</label>
                                    <input type="text" name="username" id="ADK-login-username" class="validate" required>
                                </div>

                                <div class="input-field">
                                    <label for="ADK-login-password" class="blue-grey-text text-darken-2">Password</label>
                                    <input type="password" name="password" id="ADK-login-password" class="validate" required>
                                </div>

                                <div class="ADK-separator-2"></div>

                                <button type="submit" class="btn-large waves-effect waves-light" title="Click to log in.">Log in</button>
                            </form>

                            <div class="ADK-separator-2"></div>
                        </div>

                        <div class="col s10 offset-s1">
                            <a href="javascript:displaySignup();">Don't have an account? Sign up</a>.

                            <div class="ADK-separator-3"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>